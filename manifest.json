{
	"manifest_version": 2,
	"name": "Aletheia",
	"version": "1.0",

	"description": "Browser extension that checks if a piece of news is potentially fake",
	"icons": {
		"128": "icon128.png"
	},
	
	"browser_action": {
		"default_icon": "img/icon19.png",
		"default_title": "Aletheia",
		"default_popup": "popup.html"
	},

	"minimum_chrome_version": "20",
	"permissions": [ 
		"http://*/*", 
		"https://*/*", 
		"unlimitedStorage", 
		"contextMenus", 
		"storage",
		"cookies", 
		"tabs", 
		"notifications" 
	]
}